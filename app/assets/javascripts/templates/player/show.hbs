<legend>Player Info</legend>
<div class="row">
  <div class="col-md-4">
    <dl class="dl-horizontal">
      <dt>Team</dt>
      <dd>{{model.team.name}}</dd>

      <dt>Player Name</dt>
      <dd>{{model.fullName}}</dd>

      <dt>Number</dt>
      <dd>{{model.number}}</dd>

      <dt>Position</dt>
      <dd>{{model.position}}</dd>

      <dt>Height</dt>
      <dd>{{model.height}}</dd>

      <dt>Weight</dt>
      <dd>{{model.weight}}</dd>

      <dt>Date of Birth</dt>
      <dd>{{model.birthDate}}</dd>

    </dl>
  </div>

</div>
<div class="row">
  <div class="col-md-4 text-center">

    {{#link-to 'player.edit' model class="btn btn-primary btn-sm"}}
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
      Edit Player
    {{/link-to}}
    {{#link-to 'teams.show' model.team class="btn btn-default btn-sm"}}
      <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
      Back to Team
    {{/link-to}}
  </div>
</div>
