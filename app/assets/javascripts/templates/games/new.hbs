<legend>New Game</legend>

<form class="form-horizontal" {{action 'save' on='submit'}}>
  <div class="form-group">
    <label for="date" class="col-md-2 control-label">Date:</label>
    <div class="col-md-2">
      {{pik-a-day date=model.date class="form-control"}}
    </div>
  </div>

  <div class="form-group">
    <label for="homeTeam" class="col-md-2 control-label">Home Team:</label>
    <div class="col-md-2">
    {{view "select"
    class="form-control"
    name=homeTeam
    content=homeTeams
    optionValuePath='content.id'
    optionLabelPath="content.name"
    prompt="Home team ..."
    selection=selectedHomeTeam
    required=true}}
    </div>
  </div>

  <div class="form-group">
    <label for="awayTeam" class="col-md-2 control-label">Away Team:</label>
    <div class="col-md-2">
      {{view "select"
      class="form-control"
      name=awayTeam
      content=awayTeams
      optionValuePath='content.id'
      optionLabelPath="content.name"
      prompt="Away team ..."
      selection=selectedAwayTeam
      required=true}}
    </div>
  </div>

  {{partial "shared/form_buttons"}}
</form>
